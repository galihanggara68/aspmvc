@model FirstMVC.Models.Person

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Form</title>
    <link rel="stylesheet" href="~/Content/bootstrap.min.css" />
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
</head>
<body>
    @using(Html.BeginForm("form", "First", FormMethod.Post, new { @class="form" }))
    {
        <div class="form-group">
            @Html.LabelFor(p => p.Name)
            @Html.TextBoxFor(p => p.Name, new { @class = "form-control", style = "color: red" })
            @Html.ValidationMessageFor(p => p.Name)
        </div>
        <div class="form-group">
            @Html.LabelFor(p => p.Address)
            @Html.TextBoxFor(p => p.Address, new { @class = "form-control" })
            @Html.ValidationMessageFor(p => p.Address)
        </div>
        <button type="submit">Post Data</button>
    }
</body>
</html>
